

<div class="container">
<%= link_to "Nova pessoa", new_in_need_path, class:"btn btn-success btn-sm" %>
<table class="table table-hover">
  <tr style="color:white; background-color:DimGrey">
    <th>Nome</th>
    <th>CPF</th>
    <th>Data de Nascimento</th>
    <th>Endereço</th>
    <th>Telefone</th>
    <th>Número de Pessoas</th>
    <th>Renda Familiar</th>
    <th>Itens</th>
  </tr>

  <% @donation_logs.each do |donation_log| %>
    <tr>
      <td><%= donation_logs.in_need.name %></td>
      <td><%= donation_logs.in_need.cpf %></td>
      <td><%= donation_logs.in_need.birthdate %></td>
      <td><%= donation_logs.in_need.address %></td>
      <td><%= donation_logs.in_need.phone %></td>
      <td><%= donation_logs.in_need.n_members %></td>
      <td><%= donation_logs.in_need.income %></td>
      <td><%= donation_logs.in_need.items %></td>
    </tr>
  <% end %>

</table>

</div>
