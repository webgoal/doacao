<table class="table">
  <tr>
    <th>Nome</th>
    <th>CPF</th>
    <th>Data de Nascimento</th>
    <th>Endereço</th>
    <th>Telefone</th>
    <th>Número de Pessoas</th>
    <th>Renda Familiar</th>
    <th>Itens</th>
  </tr>

  <% @in_needs.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.cpf %></td>
      <td><%= person.birthdate %></td>
      <td><%= person.address %></td>
      <td><%= person.phone %></td>
      <td><%= person.n_members %></td>
      <td><%= person.income %></td>
      <td><%= person.items %></td>
    </tr>
  <% end %>

</table>
