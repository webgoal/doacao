<h1>Listagem de Produtos</h1>

<section id="table-width">
  <table>
    <thead>
      <td>Quantidade</td>
      <td>Nome</td>
      <td>Categoria</td>
    </thead>
    <tbody>
      <% @lista.each do |element| %>
      <tr>
        <td><%= element.item_qt %></td>
        <td><%= element.item_name %></td>
        <td><%= element.item_category %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
